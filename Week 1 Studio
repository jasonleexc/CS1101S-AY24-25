// when given a regular combo returns a biggie-size version 
function biggie_size(n) {
    return n + 4;
}

// when given a biggie-sized combo, returns a regular version
function unbiggie_size(n) {
    return n - 4;
}

// returns true if biggie-sized, false otherwise
function is_biggie_size(n) {
    return n > 4 ? true : false;
}

// returns price of combo entered 
function combo_price(n) {
    return n > 4 ? (n - 4) * 1.17 + 0.5 : n * 1.17;
}

// returns an empty order represented by 0
function empty_order() {
    return 0;
}

// returns new order 
function add_to_order(a, b) {
    return display(a);
}

add_to_order(1, 2);

